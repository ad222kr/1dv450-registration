<div class="center jumbotron">
  <h1>Welcome to the API-registration application</h1>
  <% if logged_in? %>
    <%= link_to "View your applications", user_path(current_user), class: "btn btn-lg btn-primary" %>


  <% else %>
    <h2>
      Register your application here to get an API-key
    </h2>
    <div class="button-group">
      <%= link_to "Login", login_path, class:"btn btn-lg btn-success btn-block" %>

      <%= link_to "Register now!", signup_path, class: "btn btn-lg btn-primary btn-block" %>

    </div>
<% end %>
</div>
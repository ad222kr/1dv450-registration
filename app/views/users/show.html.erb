<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div><h1>
        <%= @user.name %>
        </h1>
      </div>
      <div>
        <h2>

        <%= @user.email %>
      </h2>
      </div>
      <div>
        <h1>Registered apps</h1>
        <ul>

            <% @user.apps.each do |app| %>
              <li><%= app.name + ": " + app.api_key %></li>
            <% end %>

        </ul>
      </div>
    </section>
  </aside>
</div>
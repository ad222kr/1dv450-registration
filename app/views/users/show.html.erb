<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.admin? %>
      <div><h1>Administration</h1></div>
      <% end %>
      <div><h2>
        <%= @user.name %>
        </h2>
      </div>
      <div>
        <h2>

        <%= @user.email %>
      </h2>
      </div>
    </section>
  </aside>
  <div class="col-md-8">

  </div>
</div>


<div>
  <table class="table">
    <tr>
      <th>App</th>
      <th>API-Key</th>
      <th>User</th>
      <th></th>
    </tr>

    <% if @apps.any? %>
      <% @apps.each do |app| %>
        <tr>
          <td><%= app.name %></td>
          <td><%= app.api_key %></td>
          <td><%= app.user.name  %></td>
          <td><%= link_to "Remove application", [app.user, app],
                          method: :delete,
                          data: { confirm: "Are you sure you want to remove this app?"} %></td>
        </tr>

      <% end %>
    <% end %>
  </table>

</div>